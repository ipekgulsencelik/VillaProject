
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

    @await Component.InvokeAsync("_AdminLayoutHeadComponentPartial")

<body>

    @await Component.InvokeAsync("_AdminLayoutPreloaderComponentPartial")

    <div id="main-wrapper">

        @await Component.InvokeAsync("_AdminLayoutHeaderComponentPartial")
        
        @await Component.InvokeAsync("_AdminLayoutNavbarComponentPartial")
        
        @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")

        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>@ViewData["Title"]</h4>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        @await Component.InvokeAsync("_AdminLayoutFooterComponentPartial")

    </div>
    
    @await Component.InvokeAsync("_AdminLayoutScriptComponentPartial")

</body>

</html>