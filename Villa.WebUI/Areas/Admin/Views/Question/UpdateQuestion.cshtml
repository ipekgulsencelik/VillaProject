@model UpdateQuestionDTO

@{
    ViewData["Title"] = "Soru-Cevap Bilgisi Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>ID</label>
    <input type="text" asp-for="ID" disabled class="form-control" />
    <br />
    <label>Soru</label>
    <input type="text" asp-for="Question" class="form-control" />
    <span asp-validation-for="Question" class="text-danger"></span>
    <br />
    <label>Cevap</label>
    <input type="text" asp-for="Answer" class="form-control" />
    <span asp-validation-for="Answer" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-dark"><i class="la la-save"></i> Güncelle</button>
</form>