@model CreateMessageDTO

@{
    ViewData["Title"] = "Yeni Mesaj Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Ad</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Email</label>
    <input type="email" asp-for="Email" class="form-control" />
    <br />
    <label>Konu</label>
    <input type="text" asp-for="Subject" class="form-control" />
    <br />
    <label>Mesaj İçeriği</label>
    <textarea asp-for="Content" class="form-control" rows="10"></textarea>
    <br />
    <button class="btn btn-outline-dark"><i class="la la-save"></i> Kaydet</button>
</form>