@model ResultMessageDTO

@{
    ViewData["Title"] = "Mesaj Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered">
    <tr>
        <th>ID :</th>
        <td>@Model.ID</td>
    </tr>
    <tr>
        <th>Gönderen Kişi :</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Mail Adresi :</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Konu :</th>
        <td>@Model.Subject</td>
    </tr>
    <tr>
        <th>Mesaj :</th>
        <td>@Model.Content</td>
    </tr>
</table>
<a href="/Admin/Message/Index" class="btn btn-outline-dark"><i class="la la-list"></i> Mesajlara Geri Dön</a>