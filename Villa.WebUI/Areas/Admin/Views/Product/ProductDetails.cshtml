@model ResultProductDTO

@{
    ViewData["Title"] = "Mülk Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered">
    <tr>
        <th><img src="@Model.ImageURL" style="height:200px; width:200px" class="text-center" /></th>
    </tr>
    <tr>
        <th>ID :</th>
        <td>@Model.ID</td>
    </tr>
    <tr>
        <th>Adres :</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Kategori :</th>
        <td>@Model.Category</td>
    </tr>
    <tr>
        <th>Fiyat :</th>
        <td>@Model.Price ₺</td>
    </tr>
    <tr>
        <th>Oda Sayısı :</th>
        <td>@Model.BadroomCount</td>
    </tr>
    <tr>
        <th>Banyo Sayısı :</th>
        <td>@Model.BathroomCount</td>
    </tr>
    <tr>
        <th>Metrekare :</th>
        <td>@Model.Area m2</td>
    </tr>
    <tr>
        <th>Kat :</th>
        <td>@Model.Floor</td>
    </tr>
    <tr>
        <th>Park Alanı Sayısı :</th>
        <td>@Model.ParkingCount</td>
    </tr>
</table>
<a href="/Admin/Product/Index" class="btn btn-outline-dark"><i class="la la-list"></i> Mülklere Geri Dön</a>