@model UpdateProductDTO

@{
    ViewData["Title"] = "Mülk Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>ID</label>
    <input type="text" asp-for="ID" disabled class="form-control" />
    <br />
    <label>Resim URL</label>
    <input type="text" asp-for="ImageURL" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Kategori</label>
    <select asp-for="Category" class="form-control">
        <option>Seçim Yapınız...</option>
        <option value="Modern">Modern</option>
        <option value="Çatı Katı">Çatı Katı</option>
        <option value="Lüks">Lüks</option>
        <option value="Ahşap">Ahşap</option>
    </select>
    <br />
    <label>Fiyat</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>Oda Sayısı</label>
    <input type="number" asp-for="BadroomCount" class="form-control" />
    <br />
    <label>Banyo Sayısı</label>
    <input type="number" asp-for="BathroomCount" class="form-control" />
    <br />
    <label>Büyüklük</label>
    <input type="number" asp-for="Area" class="form-control" />
    <br />
    <label>Kat</label>
    <input type="number" asp-for="Floor" class="form-control" />
    <br />
    <label>Park Alanı Sayısı</label>
    <input type="number" asp-for="ParkingCount" class="form-control" />
    <br />
    <button class="btn btn-outline-dark"><i class="la la-save"></i> Güncelle</button>
</form>